<%= link_to "スレッド一覧に戻る", boards_path %>

<p><%= @board.title %></p>

<% @board.comments.each do |comment|  %>
  <%= comment.name %>
  <%= link_to "削除", board_comment_path(@board, comment), method: :delete, data: {confirm: "sakujo"} %>
<% end %>

<%= form_for @comment, url: board_comments_path(@board, @comment) do |f| %>
 名前:
 <%= f.text_field :name %>
 <br>
 コメント:
 <%= f.text_area :content %>
 <br>
<%= f.submit %>
<% end %>
<p><%= link_to "掲示板を編集", edit_board_path(@board) %></p>
<p><%= link_to "掲示板を削除", board_path(@board), method: :delete, data: {confirm: "本当によろしいですか？"} %></p>